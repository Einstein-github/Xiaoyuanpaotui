<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/address_content_layout"
        android:layout_width="320dp"
        android:layout_height="match_parent"

        >
        <TextView
            android:id="@+id/address_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="16dp"
            tools:text="我是地址我是地址我是地址我是地址我是地址我是地址我是地址"/>

        <TextView
            android:id="@+id/address_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/address_content"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="王小明" />

        <TextView
            android:id="@+id/address_user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/address_user_name"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/address_content"
            android:singleLine="true"
            tools:text="17757582356"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/address_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/address_content_layout">
        <ImageView
            android:id="@+id/address_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/edit_address"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#d0d0d0"/>
</RelativeLayout>