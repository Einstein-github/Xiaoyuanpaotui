<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register">

    <RelativeLayout
        android:id="@+id/register_phone_layout"
        android:layout_above="@+id/register_verification_layout"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_radius"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
              <ImageView
                  android:id="@+id/register_phone_img"
                  android:layout_centerVertical="true"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="10dp"
                  android:background="@mipmap/phone"
                  />
                <EditText
                    android:id="@+id/register_phone_edit"
                    android:layout_toRightOf="@+id/register_phone_img"
                    android:layout_toLeftOf="@+id/register_phone_text"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:textSize="14sp"
                    android:hint="请输入手机号"
                    />
                <TextView
                    android:id="@+id/register_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:text=""
                    android:textColor="@color/purple"
                    android:layout_marginRight="10dp"

                    />
    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/register_verification_layout"
        android:layout_above="@+id/register_next"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_radius"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <ImageView
            android:id="@+id/register_verification_img"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/edit"
            />
        <EditText
            android:id="@+id/register_verification_edit"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/register_verification_img"
            android:layout_toLeftOf="@+id/register_verification_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入验证码"

            />
        <TextView
            android:id="@+id/register_verification_text"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_radius_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/register_next"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_style_one"
        />
</RelativeLayout>