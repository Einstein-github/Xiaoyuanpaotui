<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/order_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <ImageView
                android:id="@+id/order_detail_image"
                android:layout_margin="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <TextView
                android:id="@+id/order_detail_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/order_detail_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/order_detail_time"
                android:layout_alignEnd="@+id/order_detail_name"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/light_grey"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="73dp">
            <TextView
                android:layout_margin="8dp"
                android:id="@+id/order_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text=""/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="@color/light_grey"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="133dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
            <RelativeLayout
                android:id="@+id/order_detail_address_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/order_detail_address_img"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/address"/>
                <TextView
                    android:id="@+id/order_detail_address_text"
                    android:layout_toRightOf="@+id/order_detail_address_img"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text=""
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_detail_price_layout"
                android:layout_below="@+id/order_detail_address_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/order_detail_price_img"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/price"/>
                <TextView
                    android:id="@+id/order_detail_price_text"
                    android:layout_toRightOf="@+id/order_detail_price_img"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="跑腿费:"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_detail_status_layout"
                android:layout_below="@+id/order_detail_price_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/order_detail_status_img"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/status"/>
                <TextView
                    android:id="@+id/order_detail_status_text"
                    android:layout_toRightOf="@+id/order_detail_status_img"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="订单状态："
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/order_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        >
        <Button
            android:id="@+id/order_detail_accept_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="我要接单"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="@color/white"
            android:background="@drawable/button_style_two"/>
        <Button
            android:id="@+id/order_detail_comment_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="评论"
            android:background="@drawable/button_style_one"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>