<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_comment_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/item_comment_user_image"
        android:textColor="#4d4d4d"
        android:textSize="14dp"
        tools:text="用户名"/>

    <TextView
        android:id="@+id/item_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_comment_user_id"
        android:layout_below="@+id/item_comment_user_id"
        android:textColor="#999999"
        android:textSize="12dp"
        tools:text="8小时前发表" />

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/item_comment_user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/item_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_comment_time"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="-20dp"
        android:textColor="#4d4d4d"
        android:textSize="18dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/item_comment_user_image"
        android:singleLine="true"
        tools:text="我是内容"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#d0d0d0"/>
</RelativeLayout>