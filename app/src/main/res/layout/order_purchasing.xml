<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:background="@color/blue"
        android:id="@+id/order_purchasing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="4dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:text="@string/home_head_purchasing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--<TextView
            android:id="@+id/order_purchasing_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/back"
            />-->
        <TextView
            android:id="@+id/order_purchasing_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/release"
            android:layout_marginRight="20dp"
            />
    </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="10dp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                  <EditText
                      android:layout_marginRight="10dp"
                      android:layout_marginLeft="10dp"
                      android:id="@+id/order_purchasing_content_edit"
                      android:layout_width="match_parent"
                      android:layout_height="100dp"
                      android:background="@null"
                      android:textSize="16sp"
                      android:hint="代购零食、奶茶、食堂饭等等"
                      />

                  <RelativeLayout
                      android:id="@+id/order_purchasing_address_layout"
                      android:baselineAligned="true"
                      android:layout_width="match_parent"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="5dp"
                      android:layout_height="40dp">
                      <TextView

                          android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:text="收获地址"
                          android:textColor="@color/black"
                          android:gravity="center_vertical"
                          android:textSize="18sp"/>
                      <TextView
                          android:id="@+id/order_purchasing_address_text"
                          android:layout_centerInParent="true"
                          android:textColor="@color/gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:text="送到哪里去"/>
                      <ImageView
                          android:id="@+id/order_purchasing_address_select"
                          android:layout_alignParentRight="true"
                          android:layout_centerVertical="true"
                          android:layout_marginRight="10dp"
                          android:layout_marginLeft="10dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@mipmap/more"/>
                  </RelativeLayout>

              </LinearLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_weight="1"
                android:baselineAligned="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <TextView
                    android:id="@+id/order_purchasing_price_text"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="跑腿费"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/order_purchasing_price_edit"
                    android:layout_toRightOf="@+id/order_purchasing_price_text"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:hint="请输入跑腿费"
                    android:background="@null"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:baselineAligned="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <TextView
                    android:id="@+id/order_purchasing_cost_text"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="物品价格"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/order_purchasing_cost_edit"
                    android:layout_toRightOf="@+id/order_purchasing_cost_text"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:hint="请输入代购商品大致价格"
                    android:background="@null"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        app:cardElevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:baselineAligned="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <TextView
                    android:id="@+id/order_purchasing_num_text"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="电话"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/order_purchasing_num_edit"
                    android:layout_toEndOf="@+id/order_purchasing_num_text"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:hint="请输入您的联系电话"
                    android:background="@null"/>

            </RelativeLayout>
            <RelativeLayout
                android:baselineAligned="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <TextView
                    android:id="@+id/order_purchasing_name_text"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="姓名"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/order_purchasing_name_edit"
                    android:layout_toEndOf="@+id/order_purchasing_name_text"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:hint="请填写您的姓名"
                    android:background="@null"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>