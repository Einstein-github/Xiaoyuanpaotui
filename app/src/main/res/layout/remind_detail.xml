<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/remind_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="消息详情"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp">
            <TextView
                android:layout_margin="8dp"
                android:id="@+id/remind_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text=""/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="@color/light_grey"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="73dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <RelativeLayout
                android:id="@+id/remind_detail_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/remind_detail_phone_img"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/telephone"/>
                <TextView
                    android:id="@+id/remind_detail_phone_text"
                    android:layout_toRightOf="@+id/remind_detail_phone_img"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="联系人手机："
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/remind_detail_name_layout"
                android:layout_below="@+id/remind_detail_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/remind_detail_name_img"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon"/>
                <TextView
                    android:id="@+id/remind_detail_name_text"
                    android:layout_toRightOf="@+id/remind_detail_name_img"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="联系人姓名:"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/remind_detail_price_layout"
                android:layout_below="@+id/remind_detail_name_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/remind_detail_price_img"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/price"/>
                <TextView
                    android:id="@+id/remind_detail_price_text"
                    android:layout_toRightOf="@+id/remind_detail_price_img"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="订单价格："
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/remind_detail_time_layout"
                android:layout_below="@+id/remind_detail_price_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/remind_detail_time_img"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/time"/>
                <TextView
                    android:id="@+id/remind_detail_time_text"
                    android:layout_toRightOf="@+id/remind_detail_time_img"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="订单时间："
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/remind_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        >
        <Button
            android:id="@+id/remind_detail_accept_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="确认订单"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="@color/white"
            android:background="@drawable/button_style_two"/>
        <Button
            android:id="@+id/remind_detail_comment_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="评价"
            android:background="@drawable/button_style_one"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>